@{
    Layout = "~/Views/Layouts/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="login-box">
    <div class="card">
        <div class="card-body login-card-body">
            <h5 class="login-box-msg">Login to HRMS</h5>

            <form action="login-check" id="login" method="POST">
                <div class="input-group mb-3">
                    <input type="email" class="form-control" placeholder="Email" name="email" id="email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" placeholder="Password" name="password" id="password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 d-flex mx-auto mb-2">
                        <button type="submit" class="btn btn-sm btn-primary btn-block rounded-0 text-center">
                            Sign In
                        </button>
                    </div>
                </div>
            </form>
            <p class="mb-1">
                <a href="auth/forgetpassword">I forgot my password</a>
            </p>

        </div>
    </div>
</div>
